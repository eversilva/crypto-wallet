<p id="notice"><%= notice %></p>

<h1><%= t('coin.plural') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('coin.fields.description') %>:</th>
      <th><%= t('coin.fields.acronym') %>:</th>
      <th><%= t('coin.fields.url_image') %>:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, size: 25, alt: coin.description %></td>
        <td><%= link_to t('show'), coin %></td>
        <td><%= link_to t('edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('delete'), coin, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('coin.new'), new_coin_path %>
