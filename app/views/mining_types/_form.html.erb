<%= form_with(model: mining_type, local: true) do |form| %>
  <% if mining_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(mining_type.errors.count, "error") %> prohibited this mining_type from being saved:</h2>

      <ul>
      <% mining_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">

    <div class="field col-lg-4  col-md-6 mt-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_field :description, class: 'form-control', placeholder: 'Proof of Work' %>
    </div>

    <div class="field col-lg-4  col-md-6 mt-3">
      <%= form.label :acronym, class: 'form-label' %>
      <%= form.text_field :acronym, class: 'form-control', placeholder: 'PoW'  %>
    </div>

    <div class="actions mt-3 d-flex col-12">
      <%= form.submit "#{t("links.#{action_name}")} #{MiningType.model_name.human}", class: 'btn btn-primary' %>
      <%= link_to t('links.back'), mining_types_path, class: 'btn btn-neutral mx-3' %>
    </div>

  </div>
<% end %>
