<p id="notice"><%= notice %></p>

<h1><%= t('mining_type.plural') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('mining_type.fields.description') %></th>
      <th><%= t('mining_type.fields.acronym') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mining_types.each do |mining_type| %>
      <tr>
        <td><%= mining_type.description %></td>
        <td><%= mining_type.acronym %></td>
        <td><%= link_to t('show'), mining_type %></td>
        <td><%= link_to t('edit'), edit_mining_type_path(mining_type) %></td>
        <td><%= link_to t('delete'), mining_type, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('mining_type.new'), new_mining_type_path %><br />
